{% extends 'base.html.j2'%}
{% block title %}
Store
{% endblock %}

{% block content %}
<h1>Fresh Food and Cold Pressed Juice</h1>
<hr>    
    {% for item in items %}
        <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
        <div class="col-md-8">
        <div class="card-body">
        <h5 class="card-title">{{item.name}} </h5>

        {# <small><a href="{{url_for('', id=item.id)}}">Add to Cart</a></small> #}

        <p class="card-text"><small class="text-muted">
        {{item.body}}
        <span style="color:darkblue" class="float-end">
        {{item.price}}
        </span>
        <small><a href="{{url_for('main.get_item', id=item.id)}}">More</a></small>
        </small></p>
        </div>
        </div>
        </div>
        </div>
    {%endfor%}
{% endblock %}